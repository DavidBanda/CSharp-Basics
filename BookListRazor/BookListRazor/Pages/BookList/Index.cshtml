@page
@model BookListRazor.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9 pt-3 pb-3">
        <h2 class="text-info">BookList</h2>
    </div>
    <div class="col-3 pt-3 pb-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create a new book</a>
    </div>

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Author</th>
                    <th> ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/bookList.js"></script>
}